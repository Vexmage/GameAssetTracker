@page "/"

<PageTitle>Home</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="text-primary">Welcome to Game Asset Tracker</h1>
            <p class="lead">Keep track of your game assets effortlessly with our intuitive web app.</p>
            <p>
                Whether you're managing game characters, inventories, or tracking resources, we've got you covered.
            </p>
            <button class="btn btn-success btn-lg" @onclick="StartTracking">Get Started</button>
        </div>

        <div class="col-md-4 text-center">
            <img src="https://via.placeholder.com/300" alt="Game Assets" class="img-fluid rounded shadow-lg">
        </div>
    </div>

    <div class="mt-5">
        <h3 class="text-secondary">Features</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <i class="bi bi-check-circle-fill text-success"></i> Organize your game assets in one place
            </li>
            <li class="list-group-item">
                <i class="bi bi-check-circle-fill text-success"></i> Track inventory and resources effortlessly
            </li>
            <li class="list-group-item">
                <i class="bi bi-check-circle-fill text-success"></i> View statistics and insights
            </li>
        </ul>
    </div>
</div>

@code {
    private void StartTracking()
    {
        Console.WriteLine("Tracking started! Implement navigation logic here.");
    }
}
